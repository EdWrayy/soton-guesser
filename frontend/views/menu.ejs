<!doctype html>
<html lang="en">
    <div class="menu">
        <div>
            <button class="btn btn-lg btn-primary" @click="createLobby">StartLobby</button>
            <p>Enter lobby code</p>
            <input type="text" v-model="code" class="form-control" placeholder="Code">
            <button class="btn btn-lg btn-primary" @click="joinLobby">Join</button>
            <button class="btn btn-lg btn-primary" @click="toUpload">Upload location</button>
        </div>
        <div>
            <p>Global leaderboard</p>
            <select id="leaderboardTimeframe" onchange="updateLeaderboard()" onload="updateLeaderboard()">
                <option value="Default">Select Leaderboard Duration</option>
                <option value="month">Month</option>
                <option value="alltime">All Time</option>
            </select>
            <%- include('leaderboard'); -%>
        </div>
    </div>
</html>